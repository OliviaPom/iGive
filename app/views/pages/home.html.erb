<div class="container my-4">
<h1 class="my-5">Help your community and become a hero today</h1>
<%= link_to 'See all missions', missions_path, class: "btn btn-sm btn-primary"%>
<div class="container">
  <div class="container-search-bar my-5">
    <form action="/missions" method="get">
      <label class="search-label">Search nearest charity missions</label>
      <div class="input-group md-form form-sm form-2 pl-0">
        <input class="form-control my-0 py-1 red-border" type="text" autocomplete="on" placeholder="E.g. South London..." name="query" aria-label="Search">
        <div class="input-group-append">
          <input type="submit" class="input-group-text red lighten-3" id="basic-text1">
        </div>
      </div>
    </form>
  </div>
</div>

