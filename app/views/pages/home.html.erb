
<%= render "shared/carousel"%>
<!-- end carousel -->
  <div class="container-fluid bg-white py-5">
    <div class="container my-4 text-center">
      <h1 class="my-5">Help your community and become a hero today</h1>
      <p><%= image_tag "animated-igive-logo-infinite.gif", height: '200px' %></p>
      <%= link_to 'See all missions', missions_path, class: "btn btn-sm btn-success btn-rounded btn-lg"%>
    </div>
  </div>

  <div class="container-fluid search-box">
      <div class="container-search-bar my-5 ">
        <form action="/missions" method="get">
          <label class="search-label">Search nearest charity missions</label>
          <div class="input-group input-group-lg md-form form-sm form-2 pl-0">
            <input class="form-control my-0 py-3 red-border" type="text" autocomplete="on" placeholder="E.g. South London..." name="query" aria-label="Search">
            <div class="input-group-append">
              <input type="submit" class="input-group-text red lighten-3" id="basic-text1">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%= render "shared/testimonial"%>
