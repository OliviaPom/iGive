<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6 mx-auto">
      <h1 class="my-4">Edit the Mission </h1>
        <%= simple_form_for [ @mission ] do |f| %>
        <div class="form-inputs">
          <%= f.input :start_date %>
          <%= f.input :title %>
          <%= f.input :number_of_volunteers %>
          <%= f.input :address %>
          <%= f.input :description, as: :text, :input_html => { cols: 5, rows: 6, maxlength: 600} %>
        </div>
        <div class="form-actions">
          <%= f.submit "Submit", class: "btn btn-info btn-rounded" %>
        </div>
        <% end %>
    </div>
  </div>
</div>
