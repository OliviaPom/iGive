<%#= if  @volunteer_completed_missions.count == (1..5) %>
<%#= <image_tag(".png")> %>
<%#= elsif @volunteer_completed_missions.count == (5..10) %>
<%#= <image_tag(".png")> %>
<%#= elsif @volunteer_completed_missions.count == (10..20) %>
<%#= <image_tag(".png")> %>
<%#= elsif @volunteer_completed_missions.count == (20..30) %>
<%#= <image_tag(".png")> %>
<%#= else @volunteer_completed_missions.count == (0) %>
<%#= end %>

<div class="container">
    <h1 class="my-4">Your dashboard</h1>
    <div class="mx-auto">
        <!-- summary box for:
          - User welcome message
          - User email
          - User badge level
         -->
      </div>

      <div class="">
        <!-- summary box for:
          - x days left before next mission
          - mission completed
         -->
      </div>

      <!-- mission section starts here -->
      <h1>Missions</h1>


      <div class="mx-auto">
      <h2>My Pending Missions</h2>
      <% @pending_volunteer_missions.each do |booking| %>
          <ul>
            <li><%= link_to "#{booking.mission.title}", mission_path(booking.mission) %></li>
            <li><%= booking.mission.charity.name %></li>
            <li><%= (Date.today..booking.mission.start_date).count %> days left!</li>
          </ul>
      <% end %>
      </div>

      <div class="mx-auto">
        <h2>My Upcoming missions</h2>
        <% @accepted_volunteer_missions.each do |booking| %>
            <div>
              <ul>
                <li><%= link_to "#{booking.mission.title}", mission_path(booking.mission) %></li>
                <li><%= booking.mission.charity.name %></li>
                <li><%= (Date.today..booking.mission.start_date).count %> days left!</li>
              </ul>
            </div>
          <% end %>
      </div>
      <div class="mx-auto">
        <h2>My Completed missions</h2>
        <% @volunteer_completed_missions.each do |booking|%>
          <div>
            <ul>
              <li><%= booking.mission.title %></li>
              <li><%= booking.mission.charity.name %></li>
            </ul>
          </div>
        <% end %>
      </div>
  </div>

