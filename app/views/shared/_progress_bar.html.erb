<div class="container-progressbar">

    <!-- progress bar - animated version  -->

    <% if @volunteer_completed_missions.count < 5  %>
       <% level = 'LEVEL 1' %>
       <% level_score = '25%' %>
    <% elsif @volunteer_completed_missions.count < 10  %>
       <% level = 'LEVEL 2' %>
       <% level_score = '50%' %>
    <% elsif @volunteer_completed_missions.count < 15  %>
      <% level = 'LEVEL 3' %>
      <% level_score = '75%' %>
    <% else @volunteer_completed_missions.count > 15  %>
      <% level = 'LEVEL Hero' %>
      <% level_score = '100%' %>
      <div><%= image_tag "shield-super-user.png", height: '50', alt: "alttext" %></div>
    <% end %>

    <div class="bar-container">
      <div class="d-flex justify-content-between">
        <div class="bar-label">Beginner</div>
        <div class="bar-label">Superhero</div>
      </div>
      <div class="bar" data-width="<%= level_score %>">
        <div class="bar-inner"></div>
        <div class="bar-percent"><%= level_score %></div>
      </div>
    </div>

