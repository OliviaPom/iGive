<div>
  <% if @volunteer_completed_missions.count < 5  %>
     <% level = 'Level 1' %>

      <%#= image_tag "heart.png", alt: "alttext", class: "shield"  %>
      <%#= image_tag "shield-first-time-user.png", alt: "alttext"%>
  <% elsif @volunteer_completed_missions.count < 10  %>
     <% level = 'Level 2' %>
     <%#= image_tag "shield-first-time-user.png", alt: "alttext"%>
     <%#= image_tag "shield-average.png", alt: "alttext" %>
  <% elsif @volunteer_completed_missions.count < 15  %>
     <% level = 'Level 3' %>
     <%#= image_tag "shield-average.png", alt: "alttext" %>
     <%#= image_tag "shield-super-user.png", alt: "alttext" %>
  <% else @volunteer_completed_missions.count > 15  %>
     <%#= image_tag "shield-super-user.png", alt: "alttext" %>
     <% level = 'Level Hero' %>
  <% end %>

  <% if [0, 5, 10].include?(@volunteer_completed_missions.count) %>
  <div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><%= "#{level}" %></div>
  </div>
  <% elsif [1, 6, 11].include?(@volunteer_completed_missions.count) %>
  <div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"><%= "#{level}" %></div>
  </div>

  <% elsif [2, 7, 12].include?(@volunteer_completed_missions.count) %>
  <div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"><%= "#{level}" %></div>
  </div>

  <% elsif [3, 8, 13].include?(@volunteer_completed_missions.count) %>
  <div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"><%= "#{level}" %></div>
  </div>
  <% elsif [4, 9, 14].include?(@volunteer_completed_missions.count) %>
  <div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"><%= "#{level}" %></div>
  </div>
  <% else %>
  <div class="progress" style="height: 40px;">
    <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><%= "#{level}" %></div>
  </div>
  <% end %>
</div>
